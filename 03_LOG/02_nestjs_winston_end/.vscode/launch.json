{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Launch Program",
        "runtimeExecutable": "npm",
        "internalConsoleOptions": "neverOpen",
        "runtimeArgs": [
            "run-script",
            "start:debug"
          ],
        "skipFiles": ["<node_internals>/**"],
        "program": "${workspaceFolder}/src/main.ts",
        "preLaunchTask": "tsc: build - tsconfig.json"
      }
    ]
  }
  